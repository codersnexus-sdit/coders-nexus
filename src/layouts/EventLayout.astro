---
import BaseLayout from './BaseLayout.astro';
import { formatDate } from '../utils/format';

export interface Props {
  title: string;
  description: string;
  date: Date;
  endDate?: Date;
  location: string;
  coverImage: string;
  tags?: string[];
  organizers?: string[];
  registrationLink?: string;
}

const {
  title,
  description,
  date,
  endDate,
  location,
  coverImage,
  tags = [],
  organizers = [],
  registrationLink,
} = Astro.props;

const formattedDate = formatDate(date);
const formattedEndDate = endDate ? formatDate(endDate) : null;
---

<BaseLayout
  title={title}
  description={description}
  image={coverImage}
  article={true}
  publishedTime={date.toISOString()}
>
  <article class="py-12 lg:py-16">
    <div class="container mx-auto px-4 max-w-4xl">
      <!-- Back Button -->
      <a
        href="/events"
        class="inline-flex items-center text-primary-600 hover:text-primary-700 mb-8 transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 mr-2"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"
          />
        </svg>
        Back to Events
      </a>

      <!-- Cover Image -->
      <img
        src={coverImage}
        alt={title}
        class="w-full h-64 md:h-96 object-cover rounded-2xl shadow-xl mb-8"
        loading="eager"
      />

      <!-- Title -->
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-gray-900 dark:text-white">
        {title}
      </h1>

      <!-- Meta Information -->
      <div class="flex flex-wrap gap-6 mb-8 text-gray-600 dark:text-gray-400">
        <!-- Date -->
        <div class="flex items-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 mr-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            />
          </svg>
          <span>
            {formattedDate}
            {formattedEndDate && ` - ${formattedEndDate}`}
          </span>
        </div>

        <!-- Location -->
        <div class="flex items-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 mr-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            />
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
            />
          </svg>
          <span>{location}</span>
        </div>
      </div>

      <!-- Tags -->
      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-8">
          {tags.map((tag) => (
            <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900 text-primary-700 dark:text-primary-300 rounded-full text-sm">
              {tag}
            </span>
          ))}
        </div>
      )}

      <!-- Registration Button -->
      {registrationLink && (
        <a
          href={registrationLink}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block bg-primary-600 hover:bg-primary-700 text-white font-semibold px-8 py-3 rounded-lg transition-colors mb-8"
        >
          Register Now
        </a>
      )}

      <!-- Divider -->
      <hr class="border-gray-200 dark:border-gray-700 mb-8" />

      <!-- Content -->
      <div class="prose prose-lg max-w-none">
        <slot />
      </div>

      <!-- Organizers -->
      {organizers && organizers.length > 0 && (
        <>
          <hr class="border-gray-200 dark:border-gray-700 my-8" />
          <div class="mt-8">
            <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">
              Organized by
            </h3>
            <div class="flex flex-wrap gap-3">
              {organizers.map((organizer) => (
                <span class="px-4 py-2 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-lg">
                  {organizer}
                </span>
              ))}
            </div>
          </div>
        </>
      )}

      <!-- Share Section -->
      <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
        <h3 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white">
          Share this event
        </h3>
        <div class="flex gap-4">
          <a
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url.href)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-600 hover:text-primary-600 transition-colors"
            aria-label="Share on Twitter"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"/>
            </svg>
          </a>
          <a
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-600 hover:text-primary-600 transition-colors"
            aria-label="Share on LinkedIn"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>