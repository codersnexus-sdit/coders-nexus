---
import Button from './Button.astro';

const {
  title = "Build. Collaborate. Innovate.",
  subtitle = "SDIT Open Source Community",
  description = "An open community of passionate SDIT students building real-world projects, sharing ideas, and learning together through open-source collaboration.",
  primaryCTA = { text: "Join the Community", href: "/join" },
  secondaryCTA = { text: "Explore Projects", href: "/projects" },
  image = '/images/hero-community.webp',
} = Astro.props;
---

<section class="relative font-[ui-sans-serif,system-ui,-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,'Helvetica Neue',Arial,'Noto Sans',sans-serif] bg-gradient-to-br from-purple-50 via-white to-indigo-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 overflow-hidden">
  <!-- Background Glow -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute -top-20 -left-20 w-96 h-96 bg-purple-500 rounded-full filter blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-[28rem] h-[28rem] bg-indigo-500 rounded-full filter blur-3xl"></div>
  </div>

  <div class="container mx-auto px-6 py-24 lg:py-32 relative">
    <div class="grid lg:grid-cols-2 gap-16 items-center">
      
      <!-- Text Section -->
      <div class="space-y-6 animate-fade-in">
        <span class="inline-block px-4 py-2 bg-purple-100 dark:bg-purple-900 text-purple-700 dark:text-purple-300 rounded-full text-sm font-semibold tracking-wide">
          {subtitle}
        </span>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-gray-900 dark:text-white leading-tight tracking-tight">
          {title}
        </h1>

        <p class="text-lg md:text-xl text-gray-700 dark:text-gray-300 leading-relaxed max-w-xl">
          {description}
        </p>

        <!-- Buttons -->
        <div class="flex flex-wrap gap-4 pt-6">
          <Button href={primaryCTA.href} variant="primary" size="lg">
            {primaryCTA.text}
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </Button>

          <Button href={secondaryCTA.href} variant="outline" size="lg">
            {secondaryCTA.text}
          </Button>
        </div>

        <!-- Stats -->
        <div class="flex flex-wrap gap-10 pt-10">
          <div>
            <div class="text-4xl font-bold text-purple-600 dark:text-purple-400">600+</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Active Students</div>
          </div>
          <div>
            <div class="text-4xl font-bold text-purple-600 dark:text-purple-400">80+</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Open Source Projects</div>
          </div>
          <div>
            <div class="text-4xl font-bold text-purple-600 dark:text-purple-400">30+</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Hackathons & Events</div>
          </div>
        </div>
      </div>

      <!-- Right Side Image -->
      <div class="relative animate-slide-up">
        <div class="relative rounded-3xl overflow-hidden shadow-2xl ring-1 ring-purple-200/40 dark:ring-purple-800/40">
          <img
            src={image}
            alt="Students collaborating on open-source projects"
            class="w-full h-auto object-cover"
            loading="eager"
          />

          <!-- Floating Tag -->
          <div class="absolute top-8 right-8 bg-white dark:bg-gray-800 p-4 rounded-xl shadow-lg animate-float">
            <div class="flex items-center space-x-2">
              <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
              <span class="text-sm font-semibold text-gray-900 dark:text-white">Open Source â€¢ Active</span>
            </div>
          </div>
        </div>

        <!-- Decorative Circles -->
        <div class="absolute -bottom-6 -left-6 w-24 h-24 bg-purple-500 rounded-full opacity-30 blur-2xl"></div>
        <div class="absolute -top-6 -right-6 w-32 h-32 bg-indigo-500 rounded-full opacity-30 blur-2xl"></div>
      </div>
    </div>
  </div>

  <!-- Bottom Wave -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 120" class="w-full h-auto fill-current text-white dark:text-gray-900">
      <path d="M0,64L48,69.3C96,75,192,85,288,80C384,75,480,53,576,48C672,43,768,53,864,58.7C960,64,1056,64,1152,58.7C1248,53,1344,43,1392,37.3L1440,32L1440,120L1392,120C1344,120,1248,120,1152,120C1056,120,960,120,864,120C768,120,672,120,576,120C480,120,384,120,288,120C192,120,96,120,48,120L0,120Z"></path>
    </svg>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
</style>
