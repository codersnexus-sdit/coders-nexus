---
import socialData from '../data/social.json';

const currentYear = new Date().getFullYear();

const footerLinks = {
  explore: [
    { name: 'Home', href: '/' },
    { name: 'About Us', href: '/about' },
    { name: 'Events', href: '/events' },
    { name: 'Team', href: '/team' },
  ],
  connect: [
    { name: 'GitHub', href: socialData.github },
    { name: 'LinkedIn', href: socialData.linkedin },
    { name: 'Instagram', href: socialData.instagram },
  ],
};
---

<footer class="bg-gradient-to-br from-primary-600 to-accent-600 text-white">
  <div class="max-w-7xl mx-auto px-6 py-12">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10 mb-10">
      <!-- Community Info Section -->
      <div class="text-center md:text-left">
        <h2 class="text-2xl font-bold mb-4 text-white">Coders Nexus</h2>

        <!-- Updated with link as requested -->
        <a 
          href="https://maps.app.goo.gl/qRqni4NNwMibajKK9" 
          target="_blank"
          class="text-beige-200 hover:text-white transition-colors duration-300 block mb-4"
        >
          Shree Devi Institute Of Technology, Airport Rd, Kenjar, Mangaluru, Karnataka - 574142 IN
        </a>

        <a 
          href="mailto:codersnexus.osc@gmail.com" 
          class="inline-flex items-center text-beige-100 hover:text-white transition-colors duration-200 text-sm"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          codersnexus.osc@gmail.com
        </a>
      </div>

      <!-- Links Section - Centered with Gap -->
      <div class="grid grid-cols-2 gap-8 md:col-span-2 max-w-md mx-auto md:mx-0 md:ml-auto">
        <!-- Follow Us -->
        <div class="text-center md:text-left">
          <h3 class="text-lg font-semibold mb-4 text-white">Follow Us</h3>
          <ul class="space-y-3">
            {footerLinks.connect.map((link) => (
              <li>
                <a 
                  href={link.href} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-beige-100 hover:text-white transition-all duration-200 text-sm inline-flex items-center group"
                >
                  <span class="group-hover:translate-x-1 transition-transform duration-200">
                    {link.name}
                  </span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 ml-1 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Others -->
        <div class="text-center md:text-left">
          <h3 class="text-lg font-semibold mb-4 text-white">Others</h3>
          <ul class="space-y-3">
            <li>
              <a 
                href="/guidelines" 
                class="text-beige-100 hover:text-white transition-all duration-200 text-sm inline-flex items-center group"
              >
                <span class="group-hover:translate-x-1 transition-transform duration-200">
                  Community Guidelines
                </span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 ml-1 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </li>
            <li>
              <a 
                href="https://github.com/codersnexus-sdit/code-of-conduct" 
                target="_blank"
                rel="noopener noreferrer"
                class="text-beige-100 hover:text-white transition-all duration-200 text-sm inline-flex items-center group"
              >
                <span class="group-hover:translate-x-1 transition-transform duration-200">
                  Code of Conduct
                </span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 ml-1 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-beige-600/50"></div>

    <!-- Bottom Section -->
    <div class="text-center pt-8 text-beige-100 hover:text-white transition-colors duration-300 text-sm cursor-pointer">
      Coders Nexus Â© {currentYear} All Rights Reserved.
    </div>
  </div>
</footer>