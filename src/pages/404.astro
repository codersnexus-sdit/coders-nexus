---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="404 - Page Not Found"
  description="The page you're looking for doesn't exist or has been moved."
>
  <section class="min-h-screen flex flex-col items-center justify-center bg-white dark:bg-gray-900 px-6">
    <div class="text-center">
      <!-- Large 404 Text -->
      <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl xl:text-9xl font-black text-blue-600 dark:text-blue-500 leading-none mb-8 px-4">
        PAGE NOT FOUND
      </h1>
      
      <!-- Button -->
      <a 
        href="/" 
        class="inline-block px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold text-sm uppercase tracking-wider transition-colors duration-200"
      >
        Go to Homepage
      </a>
    </div>
  </section>
</BaseLayout>