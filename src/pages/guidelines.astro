---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';

const entry = await getEntry('guidelines', 'guidelines');
if (!entry) {
  throw new Error('Guidelines content not found');
}
const { Content } = await entry.render();
---

<BaseLayout title="" description="">
  <!-- Hero Section -->
  <section class="pt-16 lg:pt-20 py-8 lg:py-10 bg-gradient-to-br from-primary-50 via-white to-accent-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-6">
          <!-- Title removed as requested -->
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed">
          <!-- Description removed as requested -->
        </p>
      </div>
    </div>
  </section>

  <!-- Content Section -->
  <section class="py-4 lg:py-6 bg-white dark:bg-gray-900">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <article class="prose prose-lg max-w-none dark:prose-invert">
          <div class="prose prose-lg max-w-none dark:prose-invert text-left">
            <Content />
          </div>
        </article>
      </div>
    </div>
  </section>
</BaseLayout>