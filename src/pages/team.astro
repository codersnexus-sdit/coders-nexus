---
import BaseLayout from '../layouts/BaseLayout.astro';
import TeamMember from '../components/TeamMember.astro';
import teamData from '../data/team.json';
---

<BaseLayout
  title="Our Team"
  description="Meet the passionate individuals behind Coders Nexus SDIT who make our community thrive."
>
  <!-- Hero Section -->
  <section class="py-20 lg:py-28 bg-gradient-to-br from-primary-50 via-white to-accent-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-6">
        Meet Our Team
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        Passionate individuals dedicated to building an amazing tech community and empowering fellow students.
      </p>
    </div>
  </section>

  <!-- Co-ordinators Section -->
  <section class="py-12 lg:py-16 bg-white dark:bg-gray-900">
    <div class="container mx-auto px-4">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">
        Faculty Co-ordinators
      </h2>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {teamData.coordinators.map((coordinator: any) => (
          <TeamMember
            name={coordinator.name}
            role={coordinator.role}
            image={coordinator.image}
            simpleView={true}
            showLinkedIn={false}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Community Members -->
  <section class="py-12 lg:py-16 bg-gray-50 dark:bg-gray-800">
    <div class="container mx-auto px-4">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">
        Community Member
      </h2>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {teamData.members.map((member: any) => (
          <TeamMember
            name={member.name}
            role={member.role}
            github={member.github}
            bio={member.bio}
            twitter={member.twitter}
            linkedin={member.linkedin}
          />
        ))}
      </div>
    </div>
  </section>
</BaseLayout>